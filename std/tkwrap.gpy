
@action tk-window {
    py 2 {
        stack["return"] = Tk()
    }
}

# takes window as attribute
@action tk-loop {
    py 2 {
        stack["arg[0]"].mainloop()
    }
}

# args: window, text, command
@action tk-button {
    py 2 {
        stack["return"] = ttk.Button(stack["arg[0]"], text=stack["arg[1]"])
        stack["return"].pack()
    }
}